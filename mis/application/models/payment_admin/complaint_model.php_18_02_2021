        public function get_bank_fee_details_success_online($admn_no,$order_number)   // bank fee table and payment success table
        {

            // $CI = &get_instance();
            // $this->db2 = $CI->load->database($this->misdev, TRUE);

             $sql = "select * from bank_fee_details b inner join sbi_success_details_semester_fees c on b.admn_no = c.admn_no where b.admn_no = ? and b.payment_status = '1' and b.payment_mode = 'online' and c.txnid = ?";
             $query = $this->db->query($sql, array($admn_no,$order_number));
             //echo $this->db2->last_query(); exit;
             return $query->result_array();

        }

        public function get_bank_fee_details_failure_online($admn_no,$order_number)
        {

            // $CI = &get_instance();
            // $this->db2 = $CI->load->database($this->misdev, TRUE);

             //$sql = "select * from bank_fee_details where admn_no = ? and payment_status = '2' and payment_mode = 'online'";
             $sql = "select * from bank_fee_details b inner join sbi_failure_details_semester_fees c on b.admn_no = c.admn_no where b.admn_no = ? and b.payment_status = '2' and b.payment_mode = 'online' and c.txnid = ?";
             $query = $this->db->query($sql, array($admn_no,$order_number));
             //echo $this->db->last_query();
             return $query->result_array();

        }

        public function get_order_no_full_transaction_details($order_number)
        {

            // $CI = &get_instance();
            // $this->db2 = $CI->load->database($this->misdev, TRUE);

            $sql = "select * from sbi_full_transaction where merchant_order_number = ?";
            $query = $this->db->query($sql, array($order_number));
            if ($query->num_rows() > 0) {

                return $query->result_array();
            }
            else {
               
                return false;
            }
           

        }

        public function store_user_enquiry_order_number($data_enquiry)
        {

            // $CI = &get_instance();
            // $this->db2 = $CI->load->database($this->parentserver, TRUE);

            $this->db->insert('online_payment_store_details_enquiry',$data_enquiry);

        }


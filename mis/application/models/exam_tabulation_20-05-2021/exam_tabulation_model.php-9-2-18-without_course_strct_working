     function get_grading_styleByAdminNo($admn_no){
         $sql="select  grading_type from stu_academic  where admn_no=?";
         $query = $this->db->query($sql, $admn_no);
          if ($query->num_rows() > 0)
            return $query->row();
        else {
            return 0;
        }
     }
   

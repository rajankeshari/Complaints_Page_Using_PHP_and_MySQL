				//if($course==null &&  $branch==null){
					$get_reg_info=null;
					 $get_section=null;
	               $get_reg_info= $this->get_regstration_info($session,$session_year,$row1['admn_no']);
			       //echo"Q <br>". $this->db->last_query(). $this->db->affected_rows().'<br/>'; die();
